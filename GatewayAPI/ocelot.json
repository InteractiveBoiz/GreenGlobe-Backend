{
  "ReRoutes": [
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/chat/",
      "DownstreamScheme": "http",
      "ServiceName": "ChatService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/chat-api/",
      "DelegatingHandlers": [
        "GraphQlDelegatingHandler"
      ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/event/",
      "DownstreamScheme": "http",
      "ServiceName": "EventService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/event-api/",
      "DelegatingHandlers": [
        "GraphQlDelegatingHandler"
      ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/groups/",
      "DownstreamScheme": "http",
      "ServiceName": "GroupService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/groups-api/",
      "DelegatingHandlers": [
        "GraphQlDelegatingHandler"
      ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/users/",
      "DownstreamScheme": "http",
      "ServiceName": "UserService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/user-api/",
      "DelegatingHandlers": [
        "GraphQlDelegatingHandler"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5005",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "PollConsul",
      "PollingInterval": 500
    }
  }
}